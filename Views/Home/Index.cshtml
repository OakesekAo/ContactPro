@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_LayoutLander.cshtml";
}

<div class="row align-items-center h-100 ">
    <div class="col-12 col-md-6 col-lg-5 order-last order-md-first">
        <div class="ms-5">
            <h1 class="heroTitle">
                All your <span class="texthighlight">contacts</span> in
                one place
            </h1>
            <div class="subtitle">
                Organize your events by keeping everyone in the loop. Experience the power of ContactWho
                <br><br>
                <strong>Built with pride using cutting edge tech:</strong>
                <br>
                <div class="d-flex align-items-center my-3">
                    <figure>
                        <img src="https://devicons.railway.app/i/dot-net.svg" class="imgicon" />
                        <figcaption>ASP.NET</figcaption>
                    </figure>
                    <figure>
                        <img src="https://devicons.railway.app/i/csharp.svg" class="imgicon" />
                        <figcaption>C#</figcaption>
                    </figure>
                    <figure>
                        <img src="https://devicons.railway.app/i/postgresql.svg" class="imgicon" />
                        <figcaption>Postgres</figcaption>
                    </figure>
                    <figure>
                        <img src="https://devicons.railway.app/i/bootstrap.svg" class="imgicon" />
                        <figcaption>Bootstrap</figcaption>
                    </figure>
                    <figure>
                        <img src="https://devicons.railway.app/i/railway-dark.svg" class="imgicon" />
                        <figcaption>Railway</figcaption>
                    </figure>
                </div>
            </div>
            <!-- unhide demo -->
            <div class="text-start mt-5">
                <a class="btn btn-lg btn-primary rounded-pill w-25" asp-area="Identity" asp-page="/Account/LoginDemo">DEMO</a>
            </div>
        </div>
    </div>
    <div class="col-12 col-md-6 col-lg-7 text-center">
        <img src="~/img/contactProLanding.png" class="img-fluid">
    </div>
